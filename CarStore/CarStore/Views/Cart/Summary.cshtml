@model CarStore.DAL.Entities.Cart

<div class="navbar-right hidden-xs" style="margin-top:8px;">
    <a class="my-2 my-sm-0" href='@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery })'>
        <img width="40" height="40" src="~/Images/cart.png" />
    </a>
</div>
<div class="navbar-right visible-xs">
    <a href=@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery }) class="btn btn-default navbar-btn">
        <span class="glyphicon glyphicon-shopping-cart"></span>
    </a>
</div>
<div class="navbar-text navbar-right text-info">
    @*<b class="hidden-xs">Ваша корзина:</b><br />*@
    @Model.Lines.Sum(x => x.Quantity) товар(ів) <br />на суму
    @Model.ComputeTotalValue().ToString("c")
</div>